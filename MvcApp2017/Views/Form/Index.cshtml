@model MvcApp2017.ViewModels.FormViewModel
@using MvcApp2017.Extensions

<br>
<br>
@using (Html.BeginForm("Index", "Form", FormMethod.Post))
{
	@Html.AntiForgeryToken()

	if (!ViewData.ModelState.IsValid)
	{
		<p>There are errors</p>
		@Html.ValidationSummaryBootstrap()
	}

	<div class="form-group required">
		<label class="col-sm-4 control-label">
			@Html.DisplayNameFor(m => m.Name)
			<span class="ix_popover_btn glyphicon glyphicon-info-sign" data-toggle="popover" data-content="Representative who will be responsible for this account and receive commissions"></span>
		</label>
		<div class="col-sm-4">
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", maxlength = 255 })
		</div>
	</div>

	<div class="form-group required">
		<label class="col-sm-4 control-label">
			@Html.DisplayNameFor(m => m.Email)
			<span class="ix_popover_btn glyphicon glyphicon-info-sign" data-toggle="popover" data-content="Representative who will be responsible for this account and receive commissions"></span>
		</label>
		<div class="col-sm-4">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", maxlength = 255 })
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-4 col-sm-8">
			<button type="submit" class="btn btn-primary" formnovalidate>Save</button>
		</div>
	</div>
}
